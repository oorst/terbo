{
  "title": "prd.update_composition",
  "description": "prd.update_composition JSON payload schema",
  "type": "object",
  "properties": {
    "parentId": {
      "type": "integer",
      "description": "product_id of the parent product"
    },
    "compositionId": {
      "type": "number"
    },
    "explode": {
      "type": "boolean",
      "description": "flag that specifies if composite should be exploded in bill of quantities"
    },
    "components": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "componentId": {
            "type": "integer"
          },
          "productId": {
            "type": "integer",
            "description": "the component's product_id"
          },
          "quantity": {
            "type": "number"
          },
          "removed": {
            "type": "boolean"
          }
        }
      }
    }
  },
  "required": ["parentId"]
}
